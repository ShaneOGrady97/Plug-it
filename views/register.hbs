<div class="well col-md-8 col-md-offset-2">
    <h2>Register new account</h2>
    <form class="form-horizontal" role="form" id="reg-form">
        <div class="form-group mt">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="inputUsername" class="control-label">Email</label>
            </div>
            <div class="col-sm-9">
                <input type="text" class="form-control input-lg required" id="inputUsername" placeholder="Email" required="" ><span class="error_form1" id="register_error_message"></span>
            </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="inputPassword" class="control-label">Password</label>
            </div>
            <div class="col-sm-9">
                <input type="password" class="form-control input-lg required" id="inputPassword"
                       placeholder="Password" required="" ><span class="error_form1" id="password_error_message"></span>
            </div>
        </div>
    </div>
    <div class="form-group mt">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="retypePassword" class="control-label">Retype Password</label>
            </div>
            <div class="col-sm-9">
                <input type="password" class="form-control input-lg required" id="retypePassword"
                       placeholder="Retype Password" required="" ><span class="error_form1" id="retype_password_error_message"></span>
            </div>
        </div>
    </div>
        <div class="form-group">
            <div class="row col-sm-offset-2 col-sm-10 mt">
                <button type="submit" class="btn btn-danger btn-lg">Create Account</button>
            </div>
        </div>
    </form>
</div>
